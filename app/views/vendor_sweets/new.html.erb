<h1>New Sweet for Vendor</h1>

<ol>
  <% @vendorsweet.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ol>

<%# Displays the error messages in a list if any are found. %>


<%= form_for @vendorsweet do |f| %>
<ul>
  <li>
    <%= f.label "Vendor" %>
    <%= f.collection_select :vendor_id, Vendor.all, :id, :name %>
  </li>
  <li>
    <%= f.label "Sweet" %>
    <%= f.collection_select :sweet_id, Sweet.all, :id, :name %>
  </li>
  <li>
    <%= f.label "Price" %>
    <%= f.number_field :price%>
  </li>
  <li>
    <%= f.submit "Create New Sweet for Vendor " %>
  </li>

</ul>
<% end %>
